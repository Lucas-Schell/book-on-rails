<h1 class="text-center mt-2">Cadastro</h1>

<div id="new-book-page" class="d-flex flex-column align-items-center mx-auto">
  <%= form_with class: "w-100 max-w-25", model: @user, url: sign_up_path do |form| %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.messages.each do |attr, message| %>
          <div><%= message.last %></div>
        <% end %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label "Nome" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label "Email" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label "Senha" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label "Confirme sua senha" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit "Cadastre-se", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>