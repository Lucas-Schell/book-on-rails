<h1 class="text-center mt-2">Entrar</h1>

<div id="new-book-page" class="d-flex flex-column align-items-center mx-auto">
  <%= form_with class: "w-100 max-w-25 p-3 border border-secondary shadow bg-off-white-light", url: sign_in_path do |form| %>
    <div class="mb-3">
      <%= form.label "Email" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label "Senha" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-center">
      <%= form.submit "Entrar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>