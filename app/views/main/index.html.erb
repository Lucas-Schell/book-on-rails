<h1>Todos Livros</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Publication year</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.publication_year %></td>
      <td><%= link_to 'Show', book %></td>
      <% if Current.user && Current.user.id == book.user_id %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>