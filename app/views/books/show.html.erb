<div class="d-flex justify-content-center">
  <div class="d-flex flex-column gap-4 mt-5 bg-off-white border border-2 rounded-3 max-w-50 p-4">
    <div class="d-flex">
      <% if @book.image %>
        <%= image_tag @book.image, alt: @book.title, class: "img-thumbnail me-3" %>
      <% end %>
      <div>
        <p>
          <strong>Title:</strong>
          <%= @book.title %>
        </p>

        <p>
          <strong>Author:</strong>
          <%= @book.author %>
        </p>

        <p>
          <strong>Publication year:</strong>
          <%= @book.publication_year %>
        </p>
      </div>
    </div>
    <% if Current.user && Current.user.id == @book.user_id %>
      <div class="d-flex justify-content-evenly">
        <%= link_to 'Excluir', @book, method: :delete, class: "btn btn-danger",
                    data: { confirm: 'VocÃª tem certeza que deseja excluir o livro?' } %>
        <%= link_to 'Editar', edit_book_path(@book), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>