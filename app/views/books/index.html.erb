<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Meus Livros</h1>

<ul id="book-list" class="list-group">
  <% @books.each do |book| %>
    <li class="list-group-item d-flex justify-content-between">
      <div>
        <%= link_to book, class: "text-decoration-none text-black underline-hover" do %>
          <h5><%= book.title %></h5>
        <% end %>
        <span><%= book.author %></span>,
        <span><%= book.publication_year %></span>
      </div>
      <div>
        <%= link_to 'Abrir', book %>
        <%= link_to 'Editar', edit_book_path(book) %>
        <%= link_to 'Excluir', book, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir o livro?' } %>
      </div>
    </li>
  <% end %>
</ul>

